{
  "manifest_version": 3,
  "name": "NetNaut",
  "version": "2.2",
  "description": "Auto-resumes downloads, detects RSS feeds, and blocks ads. Powered by Briceka.com.",
  "permissions": [
    "downloads",
    "declarativeNetRequest",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "128": "icon.png"
  }
}

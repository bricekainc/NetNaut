{
  "manifest_version": 3,
  "name": "NetNaut",
  "version": "2.3",
  "description": "Auto-resumes downloads, detects RSS feeds, blocks ads, and shortens links. Powered by Briceka.com.",
  "permissions": [
    "downloads",
    "declarativeNetRequest",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://trimd.cc/*",
    "https://corsproxy.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "128": "icon.png"
  }
}
